<h2>Ranking</h2>
<table>
  <thead>
    <th>Rank</th>
    <th>Name</th>
    <th>Elo</th>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <td>#<%= index + 1 %></td>
      <td><%= user.name %></td>
      <td><%= user.elo %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</ul>

<h2>Upcoming Matches</h2>
<table>
  <thead>
    <th>Date</th>
    <th>Player One</th>
    <th>Player Two</th>
  </thead>
  <tbody>
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.start_date.in_time_zone("EST").strftime("%D - %T") %></td>
      <td>
        <%= match.player_one.name %>
      </td>
      <td>
        <%= match.player_two.name %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<p>(<%= link_to("all upcoming matches...", "#") %>)</p>

<h2>Past Matches</h2>
<table>
  <thead>
    <th>Date</th>
    <th>Player One</th>
    <th>Player Two</th>
  </thead>
  <tbody>
  <% @matches.each do |match| %>
    <tr>
      <td><%= match.start_date.in_time_zone("EST").strftime("%D - %T") %></td>
      <td>
        <%= win_or_lose_indicator(match.player_one_id, match.winner_id) %>
        <%= match.player_one.name %>
      </td>
      <td>
        <%= match.player_two.name %>
        <%= win_or_lose_indicator(match.player_two_id, match.winner_id) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<p>(<%= link_to("all past matches...", "#") %>)</p>
