<div class="center-elements">
  <h4>Log in</h4>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user-form") do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "u-full-width" %>
  
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "off", class: "u-full-width" %>
  
    <div class="center-elements">
      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
          <span class="label-body">Remember me</span>
        <% end %>
      <% end -%>
    </div>
  
    <div class="center-elements">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  
  <%= render "users/shared/links" %>
</div>
