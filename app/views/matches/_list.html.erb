<% if matches.present? %>
  <table class="u-full-width">
    <thead>
      <tr>
        <th>🏆 Winner</th>
        <th>☠️ Loser</th>
        <th>Date</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% matches.each do |match| %>
        <tr>
          <td>
            <%= match.player_one.name %>
          </td>
          <td>
            <%= match.player_two.name %>
          </td>
          <td><%= match.date %></td>
          <td>(<%= link_to("Show", match_path(match)) %>)</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No matches yet...</p>
<% end %>
